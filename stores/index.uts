import { reactive } from 'vue'
/**
 * 定义state类型约束
 */
export type State = {
	state : UTSJSONObject
}

/**
 * 定义state
 */
export const store = reactive({
	state: {
		hasLogin: false
	}
} as State)

/**
 * 定义actions
 */
export const setData = (data : UTSJSONObject | null) => {
	data?.toMap()?.forEach((v, k) => {
		store.state.set(k, v)
	})
	uni.setStorageSync('state', store.state)
}