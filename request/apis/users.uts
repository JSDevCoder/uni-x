import ins from '../index.uts'

/**
 * 用户登录
 * @param username 用户名
 * @param password 用户密码
 */
export function userLogin(username : string, password : string) : Promise<UTSJSONObject> {
	return ins.post('/api/user/login', { username, password } as UTSJSONObject, null)
}

/**
 * 用户注册
 * @param username 用户名
 * @param password 用户密码
 */
export function userRegister(username : string, password : string) : Promise<UTSJSONObject> {
	return ins.post('/api/user/register', { username, password } as UTSJSONObject, null)
}

/**
 * 用户修改密码
 * @param username 用户名
 * @param password 用户密码
 */
export function userEditPwd(username : string, password : string, newPassword : string) : Promise<UTSJSONObject> {
	return ins.post('/api/user/edit_pwd', { username, password, newPassword } as UTSJSONObject, null)
}